<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TITLE -->
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:text="FORM PENYEWAAN MOBIL"
                    android:textColor="#2A2A2A"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- LABEL + VALUE TEMPLATE -->
                <!-- MOBIL -->
                <TextView
                    android:text="NAMA MOBIL"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"
                    android:paddingBottom="10dp" />

                <!-- HARGA -->
                <TextView
                    android:text="HARGA / HARI"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"
                    android:paddingBottom="10dp" />

                <!-- INPUT FIELDS -->
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Nama Lengkap Penyewa"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Nomor HP"
                    android:inputType="phone"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Alamat Lengkap Penyewa"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:focusable="false"
                    android:hint="Tanggal Mulai"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:focusable="false"
                    android:hint="Tanggal Selesai"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Lama Sewa (Hari)"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <!-- DRIVER OPTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Butuh Driver?"
                    android:textColor="#D32F2F"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etDeliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Alamat Pengiriman Mobil (Wajib jika pakai driver)"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etPickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Alamat Penjemputan (Opsional)"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Catatan Tambahan (Opsional)"
                    android:padding="14dp"
                    android:textColor="#222"
                    android:textColorHint="#999" />

                <!-- HITUNG -->
                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#D32F2F"
                    android:padding="12dp"
                    android:text="Hitung Total"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Total: -"
                    android:textColor="#2A2A2A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- SUBMIT -->
                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="#D32F2F"
                    android:padding="12dp"
                    android:text="Konfirmasi Pesanan"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
