<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="28dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TITLE -->
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORM PENYEWAAN MOBIL"
                    android:textSize="22sp"
                    android:textColor="#2A2A2A"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="20dp" />

                <!-- NAMA MOBIL -->
                <TextView
                    android:text="NAMA MOBIL"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"
                    android:paddingBottom="10dp"/>

                <!-- HARGA -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARGA / HARI"
                android:textColor="#333"
                android:textStyle="bold" />

            <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#555"
                    android:paddingBottom="10dp"/>

                <!-- NAMA PENYEWA -->
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap Penyewa"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- NOMOR HP -->
                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor HP"
                    android:inputType="phone"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- ALAMAT -->
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Lengkap Penyewa"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- TANGGAL MULAI -->
                <EditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Mulai"
                    android:focusable="false"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- TANGGAL SELESAI -->
                <EditText
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Selesai"
                    android:focusable="false"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- LAMA SEWA -->
                <EditText
                    android:id="@+id/etDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lama Sewa (Hari)"
                    android:inputType="number"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- DRIVER OPTION -->
                <TextView
                    android:text="Butuh Driver?"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/spDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <!-- ALAMAT PENGIRIMAN -->
                <EditText
                    android:id="@+id/etDeliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Pengiriman Mobil (Wajib jika pakai driver)"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- ALAMAT PENJEMPUTAN -->
                <EditText
                    android:id="@+id/etPickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Penjemputan (Opsional)"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- CATATAN TAMBAHAN -->
                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Catatan Tambahan (Opsional)"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input"
                    android:textColor="#222"
                    android:textColorHint="#999"/>

                <!-- HITUNG -->
                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hitung Total"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    android:layout_marginTop="20dp"
                    android:padding="12dp"/>

                <!-- TOTAL -->
                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: -"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2A2A2A"
                    android:layout_marginTop="15dp"/>

                <!-- SUBMIT -->
                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konfirmasi Pesanan"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    android:padding="12dp"
                    android:layout_marginTop="25dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
