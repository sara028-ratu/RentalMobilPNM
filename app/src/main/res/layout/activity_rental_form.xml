<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CARD ATAS: INFO MOBIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_bg"
            android:elevation="4dp">

            <!-- Gambar Mobil -->
            <ImageView
                android:id="@+id/imgCarSmall"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/civic_turbo" />

            <!-- TEXT AREA -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <!-- Nama Mobil -->
                <TextView
                    android:id="@+id/txtCarName"
                    android:text="Civic Turbo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Harga -->
                <TextView
                    android:id="@+id/txtCarPrice"
                    android:text="Rp 650.000 / hari"
                    android:textSize="14sp"
                    android:textColor="#FF333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- ROW ICON + TEXT -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/txtCarSeats"
                        android:text="7 seats"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- Tombol Ubah -->
            <TextView
                android:id="@+id/btnChangeCar"
                android:text="Ubah"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>


        <!-- RENTAL DETAILS TITLE -->
        <TextView
            android:text="Rental Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!-- CARD RENTAL FORM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_bg">

            <!-- Tanggal Mulai -->
            <TextView
                android:text="Tanggal Mulai"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etStartDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:drawableEnd="@drawable/calendar"
                android:padding="10dp"
                android:focusable="false"
                android:hint="Pilih Tanggal"/>

            <!-- Duration -->
            <TextView
                android:text="Waktu Rental (Hari)"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etDuration"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:hint="Masukkan Hari"/>

            <!-- Driver Option -->
            <TextView
                android:text="Opsi Driver"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <TextView
                    android:text="Dengan Driver?"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/switchDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Pickup -->
            <TextView
                android:text="Alamat Pengirim"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPickup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:hint="Masukkan Alamat"/>

            <!-- Return -->
            <TextView
                android:text="Alamat Penjemputan (Optional)"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etReturn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:hint="Masukkan ALamat(optional)"/>

            <!-- Notes -->
            <TextView
                android:text="Tinggalkan Catatan"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:hint="Permintaan atau catatan..." />
        </LinearLayout>


        <!-- PAYMENT SUMMARY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/card_bg">

            <TextView
                android:id="@+id/txtRentalSubtotal"
                android:text="Rental Mobil           Rp 650.000"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtServiceFee"
                android:text="Service Fee              $15"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

            <TextView
                android:text="Total Payment"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtTotal"
                android:text="Rp 650.000"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btnConfirmPay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirm and Pay"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</ScrollView>
