<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Gambar Mobil -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp" />

        <!-- Nama Mobil -->
        <TextView
            android:id="@+id/txtCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mobil"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="12dp" />

        <!-- Informasi Mobil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFF4F4"
            android:layout_marginBottom="20dp"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <TextView
                android:id="@+id/txtSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Kursi"
                android:textColor="#333333"
                android:textSize="16sp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/txtTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic"
                android:textColor="#333333"
                android:textSize="16sp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/txtFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bensin"
                android:textColor="#333333"
                android:textSize="16sp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023"
                android:textColor="#333333"
                android:textSize="16sp"
                android:padding="6dp" />
        </LinearLayout>

        <!-- Harga -->
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 500.000 / hari"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail deskripsi mobil..."
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginBottom="20dp" />

        <!-- Fitur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitur Kendaraan:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fitur mobil..."
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginBottom="30dp" />

        <!-- Tombol Sewa -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Sewa Sekarang"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:backgroundTint="#D32F2F"
            app:rippleColor="#FFCDD2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
